<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/eventposter"
        android:layout_width="133dp"
        android:layout_height="115dp"
        android:layout_margin="@dimen/appbar_padding_top"
        app:srcCompat="@mipmap/logo_sping_fest_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/eventname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="2dp"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />

        <TextView
            android:id="@+id/eventcategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/eventdate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="TextView" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:paddingRight="1dp"
                android:paddingTop="1dp"
                app:srcCompat="@mipmap/icon_location" />

            <TextView
                android:id="@+id/eventlocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/free_food_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="22dp"
                android:layout_height="25dp"
                app:srcCompat="@mipmap/check_mark" />

            <TextView
                android:id="@+id/free_food"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:elevation="0dp"
                android:text="Free Food"
                android:textStyle="italic" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/cancelRsvp"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:focusable="false"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:width="20dp"
                android:background="@color/colorPrimary"
                android:text="CANCEL RSVP"
                android:textSize="10sp" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>